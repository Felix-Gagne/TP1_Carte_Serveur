@model Super_Cartes_Infinies.Models.StartingCards

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>StartingCards</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label for="CardId">Select Card:</label>
                <select asp-for="CardId" class="form-control">
                    <option value="">Select a Card</option>
                    @foreach (var card in ViewBag.ExistingCards)
                    {
                        <option value="@card.Id">@card.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Card" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
